#! /usr/bin/env python3

import journal

import pylith

# attempt to
try:
    app = pylith.shells.pylith(name="pylith.app")
    status = app.run()
except pylith.shells.pylith.ConfigurationError:
    # the error must have been reported already; bail
    import pdb

    pdb.set_trace()
    raise SystemExit(1)
# if the application reports an error through the journal
except journal.ApplicationError:
    # we already have a report; bail
    import pdb

    pdb.set_trace()
    raise SystemExit(1)

# if all goes well, pass the app exit status on to the shell
raise SystemExit(status)
